<odoo>
<template id="gift_custom_product_page" inherit_id="website_sale.product">
<xpath expr="//div[@id='product_details']" position="replace">

    <div class="gift-product-layout container">

        <!-- LEFT: PRODUCT GALLERY -->
        <div class="gift-gallery">
            <t t-call="website_sale.product_images"/>
            <span class="badge-special">SPECIAL OFFER</span>
        </div>

        <!-- CENTER: CONFIGURATOR -->
        <div class="gift-configurator">

            <h1 t-field="product.name"/>
            
            <div class="product-code">
                Product Code:
                <t t-esc="product.default_code"/>
            </div>

            <!-- VARIANT SELECTORS -->
            <div class="config-section">
                <t t-call="website_sale.product_variants"/>
            </div>

            <!-- QUANTITY TIERS -->
            <div id="qty_tiers" class="qty-tiers"></div>

            <!-- CUSTOM QUANTITY -->
            <div class="custom-qty">
                <button class="qty-minus">âˆ’</button>
                <input type="number" value="50"/>
                <button class="qty-plus">+</button>
            </div>

        </div>

        <!-- RIGHT: QUOTE PANEL -->
        <div class="gift-quote-panel">

            <div class="price-box">
                <t t-call="website_sale.product_price"/>
            </div>

            <button class="btn btn-primary btn-quote">
                Add To Quote
            </button>

            <button class="btn btn-secondary">
                Buy 1 Sample
            </button>

            <div class="trust-box">
                Over 20,000+ reviews
            </div>

        </div>

    </div>

</xpath>
</template>

</odoo>
