<odoo>
<template id="gift_custom_product_page" inherit_id="website_sale.product">

    <!-- DO NOT REPLACE THE SECTION -->
    <xpath expr="//section[@id='product_detail']" position="inside">

        <!-- YOUR CUSTOM LAYOUT WRAPPER -->
        <div class="gift-product-layout">

            <!-- LEFT: GALLERY -->
            <div class="gift-gallery">
                <t t-call="website_sale.product_images"/>
            </div>

            <!-- CENTER: CONFIGURATOR -->
            <div class="gift-configurator">

                <h1 t-field="product.name"/>

                <div class="product-code">
                    Product Code:
                    <t t-esc="product.default_code"/>
                </div>

                <t t-call="website_sale.product_variants"/>

                <div id="qty_tiers"></div>

                <div class="custom-qty">
                    <button type="button">-</button>
                    <input type="number" value="50"/>
                    <button type="button">+</button>
                </div>

            </div>

            <!-- RIGHT: QUOTE PANEL -->
            <div class="gift-quote-panel">

                <div class="price-box">
                    <t t-call="website_sale.product_price"/>
                </div>

                <button type="button" class="btn btn-primary">
                    Add To Quote
                </button>

                <button type="button" class="btn btn-secondary">
                    Buy 1 Sample
                </button>

            </div>

        </div>

    </xpath>

</template>
</odoo>
