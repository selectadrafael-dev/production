<odoo>
<template id="gift_custom_product_page" inherit_id="website_sale.product">

    <!-- DO NOT REPLACE THE SECTION -->
    <xpath expr="//section[@id='product_detail']" position="inside">

        <!-- YOUR CUSTOM LAYOUT WRAPPER -->
        <div class="gift-product-layout">

            <!-- LEFT: GALLERY -->
           <div class="gift-gallery">
                <img t-att-src="'/web/image/product.template/%s/image_1024' % product.id"
                    class="img-fluid"/>
            </div>


            <!-- CENTER: CONFIGURATOR -->
                <div class="gift-configurator">                      

                        <!-- PRODUCT NAME -->
                        <h1 t-field="product.name"/>

                        <!-- PRODUCT CODE -->
                        <div class="product-code">
                            Product Code:
                            <t t-esc="product.default_code"/>
                        </div>

                        <!-- PRICE -->
                        <div class="price-box" id="dynamic_price">
                            <span t-field="product.list_price"
                                t-options='{"widget": "monetary",
                                            "display_currency": website.pricelist_id.currency_id}'/>
                        </div>

                        <!-- â­ VARIANT SELECTOR (INSERTED HERE) -->
                        <div class="variant-section">

                            <t t-foreach="product.attribute_line_ids" t-as="attr">

                                <div class="variant-group">

                                    <strong t-esc="attr.attribute_id.name"/>

                                    <div class="variant-options">

                                        <t t-foreach="attr.value_ids" t-as="value">

                                            <button type="button"
                                                    class="variant-option"
                                                    t-att-data-attr="attr.attribute_id.id"
                                                    t-att-data-value="value.id">

                                                <t t-esc="value.name"/>

                                            </button>

                                        </t>

                                    </div>

                                </div>

                            </t>

                        </div>

                        <!-- QUANTITY INPUT -->
                        <div class="custom-qty">
                            <button type="button" class="qty-minus">-</button>
                            <input type="number" value="50"/>
                            <button type="button" class="qty-plus">+</button>
                        </div>
                </div>

            <!-- RIGHT: QUOTE PANEL -->
            <div class="gift-quote-panel">
                <!-- SAFE PRICE DISPLAY -->
                <div class="price-box" id="dynamic_price">
                    <span t-field="product.list_price"
                        t-options='{"widget": "monetary",
                                    "display_currency": website.pricelist_id.currency_id}'/>
                </div>


                <button type="button" class="btn btn-primary">
                    Add To Quote
                </button>

                <button type="button" class="btn btn-secondary">
                    Buy 1 Sample
                </button>

            </div>

        </div>

    </xpath>

</template>
</odoo>
