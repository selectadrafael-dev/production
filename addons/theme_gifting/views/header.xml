<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="gifting_navbar"
            inherit_id="website.navbar"
            name="Gifting Custom Navbar">

    <xpath expr="//nav" position="replace">

      <nav class="gifting-navbar">

        <!--div class="gifting-nav-container"-->
        <div class="gifting-container gifting-nav-container">

          <!-- ===== TOP ROW ===== -->
          <div class="gifting-nav-top">

            <!-- LOGO -->
            <a href="/" class="gifting-logo">
              <img src="/theme_gifting/static/src/img/logo.png"
                   alt="Logo"/>
            </a>

            <!-- CENTER SEARCH (REAL ODOO SEARCH) -->
            <div class="gifting-search">
                <form action="/shop"
                      method="get"
                      class="o_wsale_products_search_form">

                  <input type="text"
                        name="search"
                        placeholder="Search gifts..."
                        class="form-control"/>

                  <button type="submit">üîç</button>

                </form>
              </div>

            <!-- ACTION ICONS -->
              <div class="gifting-icons">

                <!--t t-call="website.lang_selector"/-->

                <!--div class="language-switcher">

                    <t t-foreach="request.website.language_ids" t-as="lang">

                      <a t-att-href="'/web/session/change_lang/%s' % lang.code"
                        t-att-class="'active' if lang.code == request.lang else ''">

                        <t t-esc="lang.code.upper()"/>

                      </a>

                    </t>

                  </div-->

                  <!--recommended language switcher-->
                    <!--div class="language-dropdown">

                    <span class="lang-current">
                      <t t-esc="request.lang.upper()"/> ‚ñæ
                    </span>

                    <div class="lang-menu">

                      <t t-foreach="request.website.language_ids" t-as="lang">

                        <a t-att-href="'/web/session/change_lang/%s' % lang.code">
                          <t t-esc="lang.name"/>
                        </a>

                      </t>

                    </div>

                  </div-->


                <!-- Wishlist -->
                <a href="/shop/wishlist" class="icon">‚ù§Ô∏è</a>

                <!-- Cart -->
               <a href="/shop/cart" class="icon cart-icon">
                  üõí
                  <span class="cart-count">0</span>
                </a>


                <!-- Account -->
                <div class="gifting-account">
                  <!-- Logged IN -->
                  <t t-if="request.session.uid">

                    <div class="account-dropdown">

                      <span class="icon">üë§ ‚ñæ</span>

                      <div class="dropdown-menu">

                        <a href="/my">My Account</a>
                        <a href="/my/orders">Orders</a>
                        <a href="/vendor-data">Vendor Data</a>
                        <a href="/web/session/logout">Logout</a>

                      </div>

                    </div>

                  </t>

                  <!-- NOT logged in -->
                  <t t-else="">

                    <a href="/web/login" class="login-btn">
                      Login
                    </a>

                  </t>
                </div>


              </div>

          </div>

          <!-- ===== SECOND ROW ===== -->
          <div class="gifting-nav-bottom">

            <!--div class="gifting-categories">
              ‚ò∞ Kategoriler
            </div>

            <div class="gifting-links">

              <a href="#">Yeni gelenler</a>
              <a href="#">Promolar</a>
              <a href="#">√áok satanlar</a>
              <a href="#">X√ºsusi teklifler</a>
              <a href="#">Eco friendly</a>
              <a href="#">Political products</a>

            </div-->

            <div class="all-categories">

                <span class="categories-toggle">
                  ‚ò∞ All Categories
                </span>

                <div class="categories-dropdown">

                  <!-- FETCH ROOT CATEGORIES -->
                  <t t-set="categories"
                    t-value="request.env['product.public.category']
                              .sudo()
                              .search([
                                  ('parent_id','=',False)
                              ])"/>

                  <t t-if="categories">

                    <t t-foreach="categories" t-as="cat">

                      <div class="category-item">

                        <!-- PARENT -->
                        <a t-att-href="'/shop/category/%s' % cat.id"
                          class="category-parent">
                          <t t-esc="cat.name"/>
                        </a>

                        <!-- CHILDREN -->
                        <t t-if="cat.child_id">

                          <div class="subcategory-list">

                            <t t-foreach="cat.child_id" t-as="child">

                              <a t-att-href="'/shop/category/%s' % child.id"
                                class="subcategory">
                                <t t-esc="child.name"/>
                              </a>

                            </t>

                          </div>

                        </t>

                      </div>

                    </t>

                  </t>

                  <t t-else="">
                    <div class="no-categories">
                      No categories available
                    </div>
                  </t>

                </div>

              </div>


            <div class="gifting-links">

              <a href="#">New Arrivals</a>
              <a href="#">Promotions</a>
              <a href="#">Best Sellers</a>
              <a href="#">Special Offers</a>
              <a href="#">Eco friendly</a>
              <a href="#">Political products</a>

            </div>

          </div>

        </div>

      </nav>

    </xpath>

  </template>

</odoo>
