<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="gifting_navbar"
            inherit_id="website.navbar"
            name="Gifting Custom Navbar">

    <xpath expr="//nav" position="replace">

      <nav class="gifting-navbar">

        <!--div class="gifting-nav-container"-->
        <div class="gifting-container gifting-nav-container">

          <!-- ===== TOP ROW ===== -->
          <div class="gifting-nav-top">

            <!-- LOGO -->
            <a href="/" class="gifting-logo">
              <img src="/theme_gifting/static/src/img/logo.png"
                   alt="Logo"/>
            </a>

            <button class="mobile-toggle" aria-label="Menu">
              ‚ò∞
            </button>
            

            <!-- CENTER SEARCH (REAL ODOO SEARCH) -->
            <div class="gifting-search">
                <form action="/shop"
                      method="get"
                      class="o_wsale_products_search_form">

                  <input type="text"
                        name="search"
                        placeholder="Search gifts..."
                        class="form-control"/>

                  <button type="submit">üîç</button>

                </form>
              </div>

              <!-- ACTION ICONS -->
              <div class="gifting-icons">
                  <!--recommended language switcher-->
                  <!--div class="lang-switcher">

                      <button id="langBtn" class="lang-btn">
                        <t t-esc="request.env.lang.split('_')[0].upper()"/> ‚ñº
                      </button>

                      <div id="langMenu" class="lang-menu">

                        <t t-foreach="request.env['res.lang'].search([('active','=',True)])" t-as="lang">

                          <a t-att-href="'/website/lang/%s' % lang.code"
                            class="lang-item">

                            <t t-esc="lang.name"/>

                          </a>

                        </t>

                      </div>
                    </div-->

                <t t-call="website.language_selector"/>

                <!-- Wishlist -->
                <a href="/shop/wishlist" class="icon">‚ù§Ô∏è</a>

                <!-- Cart -->
               <a href="/shop/cart" class="icon cart-icon">
                  üõí
                  <span class="cart-count">0</span>
                </a>


                <!-- Account -->
                <div class="gifting-account">
                  <!-- Logged IN -->
                  <t t-if="request.session.uid">

                    <div class="account-dropdown">

                      <span class="icon">üë§ ‚ñæ</span>

                      <div class="dropdown-menu">

                        <a href="/my"  t-translation="on">
                        
                         My Account
                        </a>
                        <a href="/my/orders"  t-translation="on">
                           Orders
                        </a>
                        <a href="/vendor-data"  t-translation="on">
                          Vendor Data
                        </a>
                        <a href="/web/session/logout"  t-translation="on">
                         Logout
                        </a>
                      </div>
                    </div>
                  </t>

                  <!-- NOT logged in -->
                  <t t-else="">

                    <a href="/web/login" class="login-btn"  t-translation="on">
                       Login
                    </a>

                  </t>
                </div>


              </div>

          </div>

          <!-- ===== SECOND ROW ===== -->
          <div class="gifting-nav-bottom">
              <button class="mobile-close" aria-label="Close Menu">‚úï</button>

            <div class="gifting-categories" t-translation="on">

              <button class="cat-btn mobile-cat-toggle">
                ‚ò∞ All Categories
              </button>

              <div class="cat-mega">

                <!-- Get root categories -->
                <t t-set="categories"
                  t-value="request.env['product.public.category'].sudo().search([('parent_id','=',False)])"/>

                <t t-if="categories">

                  <div class="cat-columns">

                    <t t-foreach="categories" t-as="cat">

                      <div class="cat-col">

                        <!-- Parent category -->
                        <a t-att-href="'/shop/category/%s' % cat.id"
                          class="cat-parent">
                          <t t-esc="cat.name"/>
                        </a>

                        <!-- Subcategories -->
                        <t t-if="cat.child_id">

                          <t t-foreach="cat.child_id" t-as="sub">

                            <a t-att-href="'/shop/category/%s' % sub.id"
                              class="cat-sub">
                              <t t-esc="sub.name"/>
                            </a>

                          </t>

                        </t>

                      </div>

                    </t>

                  </div>

                </t>

              </div>

            </div>


              
            <div class="gifting-links" t-translation="on">

              <a href="#"  t-translation="on">
                New Arrivals
              </a>
              <a href="#"  t-translation="on">
                  Promotions
              </a>
              <a href="#"  t-translation="on">
                Best Sellers
              </a>
              <a href="#"  t-translation="on">
                Special Offers
              </a>
              <a href="#"  t-translation="on">
                 Eco friendly
              </a>
              <a href="#"  t-translation="on">
                  Political products
              </a>

            </div>

          </div>

        </div>

      </nav>

    </xpath>

  </template>

</odoo>
