<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="gifting_navbar"
            inherit_id="website.navbar"
            name="Gifting Custom Navbar">

    <xpath expr="//nav" position="replace">

      <nav class="gifting-navbar">

        <!--div class="gifting-nav-container"-->
        <div class="gifting-container gifting-nav-container">

          <!-- ===== TOP ROW ===== -->
          <div class="gifting-nav-top">

            <!-- LOGO -->
            <a href="/" class="gifting-logo">
              <img src="/theme_gifting/static/src/img/logo.png"
                   alt="Logo"/>
            </a>

            <!-- CENTER SEARCH (REAL ODOO SEARCH) -->
            <div class="gifting-search">
                <form action="/shop"
                      method="get"
                      class="o_wsale_products_search_form">

                  <input type="text"
                        name="search"
                        placeholder="Search gifts..."
                        class="form-control"/>

                  <button type="submit">üîç</button>

                </form>
              </div>

              <!-- ACTION ICONS -->
              <div class="gifting-icons">
                  <!--recommended language switcher-->
                  <!--div class="lang-switcher">

                      <button id="langBtn" class="lang-btn">
                        <t t-esc="request.env.lang.split('_')[0].upper()"/> ‚ñº
                      </button>

                      <div id="langMenu" class="lang-menu">

                        <t t-foreach="request.env['res.lang'].search([('active','=',True)])" t-as="lang">

                          <a t-att-href="'/website/lang/%s' % lang.code"
                            class="lang-item">

                            <t t-esc="lang.name"/>

                          </a>

                        </t>

                      </div>
                    </div-->

                <t t-call="website.language_selector"/>

                <!-- Wishlist -->
                <a href="/shop/wishlist" class="icon">‚ù§Ô∏è</a>

                <!-- Cart -->
               <a href="/shop/cart" class="icon cart-icon">
                  üõí
                  <span class="cart-count">0</span>
                </a>


                <!-- Account -->
                <div class="gifting-account">
                  <!-- Logged IN -->
                  <t t-if="request.session.uid">

                    <div class="account-dropdown">

                      <span class="icon">üë§ ‚ñæ</span>

                      <div class="dropdown-menu">

                        <a href="/my">
                        
                         My Account
                        </a>
                        <a href="/my/orders">
                           Orders
                        </a>
                        <a href="/vendor-data">
                          Vendor Data
                        </a>
                        <a href="/web/session/logout">
                         Logout
                        </a>
                      </div>
                    </div>
                  </t>

                  <!-- NOT logged in -->
                  <t t-else="">

                    <a href="/web/login" class="login-btn">
                       Login
                    </a>

                  </t>
                </div>


              </div>

          </div>

          <!-- ===== SECOND ROW ===== -->
          <div class="gifting-nav-bottom">

            <!--div class="gifting-categories">
              ‚ò∞ Kategoriler
            </div>

            <div class="gifting-links">

              <a href="#">Yeni gelenler</a>
              <a href="#">Promolar</a>
              <a href="#">√áok satanlar</a>
              <a href="#">X√ºsusi teklifler</a>
              <a href="#">Eco friendly</a>
              <a href="#">Political products</a>

            </div-->

            <div class="gifting-categories">

              <!-- Toggle -->
              <button class="cat-btn" data-cat-toggle="1">
                ‚ò∞ All Categories
              </button>

              <!-- Dropdown -->
              <div class="cat-dropdown"
                  data-cat-menu="1"
                  hidden="hidden">

                <!-- TOP LEVEL CATEGORIES ONLY -->
                <t t-set="cats"
                  t-value="request.env['product.public.category'].sudo().search([('parent_id','=',False)])"/>

                <t t-if="cats">

                  <t t-foreach="cats" t-as="c">

                    <div class="cat-group">

                      <!-- Parent -->
                      <a t-att-href="'/shop/category/%s' % c.id"
                        class="cat-parent">

                        <t t-esc="c.name"/>

                      </a>

                      <!-- Children -->
                      <t t-if="c.child_id">

                        <t t-foreach="c.child_id" t-as="sub">

                          <a t-att-href="'/shop/category/%s' % sub.id"
                            class="cat-child">

                            <t t-esc="sub.name"/>

                          </a>

                        </t>

                      </t>

                    </div>

                  </t>

                </t>

                <t t-if="not cats">
                  <div class="empty">
                    No categories available
                  </div>
                </t>

              </div>

            </div>

              
            <div class="gifting-links">

              <a href="#">
                New Arrivals
              </a>
              <a href="#">
                  Promotions
              </a>
              <a href="#">
                Best Sellers
              </a>
              <a href="#">
                Special Offers
              </a>
              <a href="#">
                 Eco friendly
              </a>
              <a href="#">
                  Political products
              </a>

            </div>

          </div>

        </div>

      </nav>

    </xpath>

  </template>

</odoo>
