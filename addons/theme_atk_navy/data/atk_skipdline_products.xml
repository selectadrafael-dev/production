<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- noupdate="1" means these records are only created once on module install -->
    <data noupdate="1">
        <record id="product_atk_skip_line" model="product.template">
            <field name="name">ATK Skip-The-Line</field>
            <field name="list_price">125.0</field>
            <field name="base_unit_count">1.0</field>
            <field name="default_code">SKU-ATK-001</field>
            
            <!-- Type logic for Odoo 18: 'consu' (consumable) is correct -->
            <field name="type">consu</field>
            <!-- Field 'is_storable' is obsolete in this context and must be REMOVED -->
            
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            
            <field name="description_sale">A product for testing purposes.</field>
        </record>
    </data>
</odoo>
