<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="atk_about_page" model="website.page">
        <field name="name">ATK About Us</field>
        <field name="url">/atk-about-us</field>
        <field name="is_published" eval="True"/>
        <!-- The key must be unique; using module_name.id is best practice -->
        <field name="key">theme_atk_navy.atk_about_page</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_atk_navy.atk_about_page">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <!-- Prefilled Content Starts Here -->
                        <section class="atk-about-section">
                                <div class="atk-about-container">

                                    <div class="atk-about-text">
                                        <span class="atk-about-badge">Who We Are</span>
                                        <h2>America's Trusted Keys</h2>

                                        <p>
                                            America's Trusted Keys is a family-owned business committed to delivering
                                            <strong>fast, reliable, and affordable key solutions</strong>â€”without the
                                            dealership wait or cost.
                                        </p>

                                        <p>
                                            We proudly utilize <strong>mostly American-made products</strong>, ensuring
                                            quality, durability, and trust in every service we provide.
                                        </p>

                                        <p>
                                            As we continue to grow, our mission remains the same: to serve our community
                                            with <strong>integrity, precision, and dependable security solutions</strong>.
                                            Every customer matters to us, and we treat each job with the care we would
                                            expect for our own family.
                                        </p>
                                    </div>

                                    <div class="atk-about-visual">
                                        <img src="/theme_atk_navy/static/src/img/smart_key.png"
                                            alt="America's Trusted Keys service"
                                            loading="lazy"/>
                                    </div>

                                </div>
                            </section>

                        <!-- Editable Area for Website Builder -->
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>

