<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="atk_navbar"
              inherit_id="website.navbar"
              name="ATK Custom Navbar">

        <xpath expr="//nav" position="replace">
            <nav class="atk-navbar">
                <div class="atk-nav-container">

                    <!--LOGO-->
                    <a href="/" class="atk-logo">
                        <img src="/theme_atk_navy/static/src/img/atk_brand_logo.png"
                             alt="ATK Logo"/>
                    </a>

                    <!--MOBILE TOGGLE-->
                    <div class="atk-nav-toggle"
                            aria-label="Toggle navigation"
                            onclick="document.body.classList.toggle('atk-nav-open')">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>

                    <!--LINKS-->
                    <div class="atk-nav-links">
                        <a href="/">Home</a>
                        <a href="/atk-booking" data-atk-booking-page-open="1">Services</a>
                        <a href="/atk-about-us">About</a>
                        <a href="/contactus">Contact</a>

                        <a href="/web/login"
                           class="atk-hero-btn atk-hero-btn-filled atk-nav-btn">
                            Book Appointment
                        </a>
                    </div>
                </div>
            </nav>
        </xpath>
    </template>
</odoo>