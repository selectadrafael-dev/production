<odoo>
    <!-- Hero section -->
    <template id="s_atk_hero" name="ATK Navy Hero">
        <section class="s_atk_hero py-5 text-center">
            <div class="container">
                <h1>Welcome to ATK Navy</h1>
                <p>Trusted. Secure. Global.</p>

                <div id="atk-countdown"
                     data-date="2026-01-01T00:00:00"
                     class="mt-4">
                </div>
            </div>
        </section>
    </template>

    <!-- Register snippet -->
    <template id="s_atk_hero_register"
              inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']"
               position="inside">
            <t t-snippet="theme_atk_navy.s_atk_hero"
               t-thumbnail="/theme_atk_navy/static/description/banner.png"/>
        </xpath>
    </template>
</odoo>